{
  "name": "products-grid",
  "private": true,
  "version": "0.0.1",
  "description": "Build a grid of product items and ads",
  "main": "server/index.js",
  "dependencies": {
    "cool-ascii-faces": "^1.3.4",
    "json-server": "^0.9.6",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.3.1",
    "reactjs": "^1.0.0",
    "shards-react": "^1.0.3"
  },
  "scripts": {
    "start": "concurrently \"npm run dev\" \"npm run server\"",
    "dev": "PORT=3001 react-scripts start",
    "server": "json-server server/index.js --routes server/routes.json --middlewares server/handle-delay.js server/handle-ads.js --port=3002"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.1.0"
  }
}
